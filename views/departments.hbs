<div class="row">
    <div class="col-md-12">
        <h2>Employees</h2>
        <hr />

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Department&nbsp;Number</th>
                        <th>Department&nbsp;Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each department}}
                    <tr>
                        <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/employees?department={{departmentId}}">{{departmentName}}</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{#unless department}}
<div class="col-md-12 text-center">
    <strong>{{message}}</strong>
</div>
{{/unless}}